# Environment Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cybercore
MONGO_ROOT_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_at_least_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_at_least_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Seed Data
SEED_SUPERADMIN_PASSWORD=SuperSecurePassword123!

# OAuth2 Providers Configuration
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Microsoft OAuth2
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# LinkedIn OAuth2
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Facebook OAuth2
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# Instagram OAuth2 (via Facebook)
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Twitter OAuth2 (X)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LeetCode OAuth2 (Custom)
LEETCODE_CLIENT_ID=your_leetcode_client_id
LEETCODE_CLIENT_SECRET=your_leetcode_client_secret

# Codeforces OAuth2 (Custom)
CODEFORCES_CLIENT_ID=your_codeforces_client_id
CODEFORCES_CLIENT_SECRET=your_codeforces_client_secret

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@cybercore.com
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# File Storage Configuration
STORAGE_PROVIDER=aws
AWS_REGION=us-east-1
AWS_BUCKET=cybercore-uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# Alternative: Local file storage
# STORAGE_PROVIDER=local
# UPLOAD_PATH=./uploads

# Monitoring & Analytics
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
ANALYTICS_API_KEY=your_analytics_api_key
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
DATADOG_API_KEY=your_datadog_api_key

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3001,https://yourapp.com
TRUST_PROXY=true
HELMET_CSP_ENABLED=true

# Session Configuration
SESSION_SECRET=your_session_secret_key_for_express_sessions
SESSION_TIMEOUT=3600000
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# API Documentation
SWAGGER_ENABLED=true
API_DOCS_PATH=/api-docs
API_VERSION=v1

# Feature Flags
ENABLE_OAUTH2=true
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_CACHING=true

# Development Tools
DEBUG=cybercore:*
LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true
ENABLE_REQUEST_LOGGING=true