{
  "name": "cybercore-api",
  "version": "1.0.0",
  "description": "CyberCore Multi-tenant SaaS API with OAuth2 and RBAC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand --testPathPattern=tests/unit",
    "test:integration": "jest --runInBand --testPathPattern=tests/integration",
    "test:e2e": "jest --runInBand --testPathPattern=tests/e2e",
    "test:security": "jest --runInBand --testPathPattern=tests/security",
    "test:performance": "jest --runInBand --testPathPattern=tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=30000 --runInBand",
    "docker:services:up": "docker-compose up -d mongo redis",
    "docker:services:down": "docker-compose down",
    "docker:services:logs": "docker-compose logs -f mongo redis",
    "docker:services:clean": "docker-compose down -v --remove-orphans",
    "test:wait": "node scripts/wait-for-services.js",
    "test:docker": "bash scripts/test-docker.sh",
    "test:docker:unit": "bash scripts/test-docker.sh unit",
    "test:docker:integration": "bash scripts/test-docker.sh integration",
    "test:docker:e2e": "bash scripts/test-docker.sh e2e",
    "test:docker:coverage": "bash scripts/test-docker.sh coverage",
    "test:docker:security": "bash scripts/test-docker.sh security",
    "test:docker:performance": "bash scripts/test-docker.sh performance",
    "test:docker:all": "bash scripts/test-docker.sh all",
    "test:quick": "npm run docker:services:up && npm run test:wait && npm run test:unit",
    "test:full": "npm run docker:services:up && npm run test:wait && npm run test:ci",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "db:seed": "ts-node -r tsconfig-paths/register src/core/infra/scripts/seed.ts"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.0.3",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "audit-ci": "^6.6.1",
    "autocannon": "^7.12.0",
    "clinic": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cybercore-api.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "oauth2",
    "rbac",
    "multi-tenant",
    "saas",
    "api",
    "mongodb",
    "redis"
  ],
  "author": "CyberCore Team",
  "license": "MIT"
}
