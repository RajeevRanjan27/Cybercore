{
  "name": "cybercore-api",
  "version": "1.0.0",
  "description": "CyberCore Multi-tenant SaaS API with OAuth2 and RBAC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=30000",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "security:check": "audit-ci --config audit-ci.json",
    "perf:check": "clinic doctor --on-port 'npm run start' -- --autocannon [ / ]",
    "db:seed": "ts-node -r tsconfig-paths/register src/core/infra/scripts/seed.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register src/core/infra/scripts/migrate.ts",
    "db:reset": "ts-node -r tsconfig-paths/register src/core/infra/scripts/reset.ts",
    "docker:build": "docker build -t cybercore-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env cybercore-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:staging": "npm run build && npm run docker:build && npm run deploy:staging:script",
    "deploy:production": "npm run build && npm run docker:build && npm run deploy:prod:script",
    "deploy:staging:script": "node scripts/deploy-staging.js",
    "deploy:prod:script": "node scripts/deploy-production.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "logs:tail": "pm2 logs cybercore-api --lines 100",
    "monitor": "pm2 monit",
    "clean": "rimraf dist coverage node_modules/.cache",
    "prepare": "husky install",
    "oauth2:test": "ts-node -r tsconfig-paths/register scripts/test-oauth2.ts",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.0.3",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "audit-ci": "^6.6.1",
    "autocannon": "^7.12.0",
    "clinic": "^12.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 10000
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cybercore-api.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "oauth2",
    "rbac",
    "multi-tenant",
    "saas",
    "api",
    "mongodb",
    "redis"
  ],
  "author": "CyberCore Team",
  "license": "MIT"
}
